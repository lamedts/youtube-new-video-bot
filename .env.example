# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# YouTube API Configuration
YOUTUBE_CLIENT_SECRET_FILE=youtube-client-secret.json
YOUTUBE_TOKEN_FILE=youtube-token.json

# Firebase Configuration (required - for data persistence)
FIREBASE_CREDENTIALS_FILE=firebase-service-account.json

# Redis Configuration (required - for video storage and summaries)
# Get your URL from Upstash Console -> Database -> Redis Connect
# Format options:
# 1. Full Redis URL: redis://default:YOUR_TOKEN@your-endpoint.upstash.io:6379
# 2. HTTPS endpoint: https://your-endpoint.upstash.io (requires UPSTASH_REDIS_REST_TOKEN)
UPSTASH_REDIS_URL=redis://default:YOUR_UPSTASH_TOKEN@your-endpoint.upstash.io:6379
# Optional: If using HTTPS endpoint format, also set:
# UPSTASH_REDIS_REST_TOKEN=your_token_here
APP_NAME=youtube-bot

# Bot Settings - Using cron syntax (min hour day month weekday)
VIDEO_CRON=0 * * * *              # Every hour (poll for new videos via RSS - FREE)
CHANNEL_CRON=0 0 * * *            # Daily at midnight (sync channel subscriptions via YouTube Data API - COSTS QUOTA)
SUMMARY_CRON=0 16 * * *           # Daily at 16:00 UTC (00:00 UTC+8) - send video summary

# Bootstrap mode: true = do not notify existing videos/subs at first run
INIT_MODE=true
